generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  user
  admin
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  role     Role   @default(user)
}

model Product {
  id          String  @id @default(uuid())
  name        String
  description String
  price       Float
  imageUrl    String
  category    String?
}
